#!/bin/bash
#################################################
# depends on yeodl.config for globals:
# YEODLDIR
# APIKEY
# 
#
# Description: download daily prices and update
# TODO: change to use utility file for $DATE
# 
#################################################

set -euo pipefail
IFS=$'\n\t'

if [ -z "${XDG_CONFIG_HOME:-}" ]; then
    XDG_CONFIG_HOME=$HOME/.config
fi

. ${XDG_CONFIG_HOME}/yeodl/yeodl.config

UTILITIES="${YEODLDIR}/bin/utilities"
DATE=`date +%F`

${UTILITIES}/symbols US
${UTILITIES}/US-prices ${date}

# TODO splits and dividends
